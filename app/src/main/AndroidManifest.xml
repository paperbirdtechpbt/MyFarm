<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pbt.myfarm">

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.TYPE_APPLICATION_OVERLAY " />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="MyProvider._READ_PERMISSION" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".MyFarmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFarm"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".Activity.ViewTaskObject.ViewTaskObjectActivity"
            android:exported="false" />
        <activity android:name=".Activity.Event.EditEventActivity" />
        <activity
            android:name=".Activity.Event.ViewEventActivity"
            android:exported="true"
            android:label="View Event" />
        <activity
            android:name=".Activity.Graph.GraphActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.TaskFunctions.TaskFunctionActivity"
            android:exported="false"
            android:label="Execute Function">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.ViewTask.ViewTaskActivity" />
        </activity>
        <activity
            android:name=".Fragement.PackCollect.Activity.ColllectNewData"
            android:label="Collect New Pack" />
        <activity
            android:name=".Activity.PackConfigList.PackConfigListActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Pack.PackActivity" />
        </activity>
        <activity
            android:name=".Activity.UpDatePack.UpdatePackActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.DashBoardEvent.DashBoardEventActivity" />
        <activity
            android:name=".Activity.CreatePack.CreatePackActivity"
            android:exported="true"
            android:label="Create a Pack"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.PackConfigList.PackConfigListActivity" />
        </activity>
        <activity
            android:name=".Activity.Pack.PackActivity"
            android:exported="true"
            android:label="Pack">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.SelectConfigType.SelectConfigTypeActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.ViewTask.ViewTaskActivity" />
        </activity>
        <activity
            android:name=".Activity.CreateTask.CreateTaskActivity"
            android:exported="true"
            android:label="Create Task"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.SelectConfigType.SelectConfigTypeActivity" />
        </activity>
        <activity
            android:name=".Activity.ViewTask.ViewTaskActivity"
            android:exported="true"
            android:label="Task">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home.MainActivity" />
        </activity>
        <activity android:name=".Activity.Login.LoginActivity" />
        <activity
            android:name=".Activity.Splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
