<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pbt.myfarm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFarm"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity android:name=".Activity.TaskFunctions.TaskFunctionActivity"></activity>
        <activity android:name=".Activity.Graph.GraphActivity" />
        <activity
            android:name=".Fragement.PackCollect.Activity.ColllectNewData"
            android:label="Collect New Pack" />
        <activity
            android:name=".Activity.PackConfigList.PackConfigListActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Pack.PackActivity" />
        </activity>
        <activity
            android:name=".Activity.UpDatePack.UpdatePackActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.DashBoardEvent.DashBoardEventActivity" />
        <activity
            android:name=".Activity.CreatePack.CreatePackActivity"
            android:exported="true"
            android:label="Create a Pack"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.PackConfigList.PackConfigListActivity" />
        </activity>
        <activity
            android:name=".Activity.Pack.PackActivity"
            android:exported="true"
            android:label="Pack">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.SelectConfigType.SelectConfigTypeActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.ViewTask.ViewTaskActivity" />
        </activity>
        <activity
            android:name=".Activity.CreateTask.CreateTaskActivity"
            android:exported="true"
            android:label="Create Task"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.SelectConfigType.SelectConfigTypeActivity" />
        </activity>
        <activity
            android:name=".Activity.ViewTask.ViewTaskActivity"
            android:exported="true"
            android:label="Task">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home.MainActivity" />
        </activity>
        <activity android:name=".Activity.Login.LoginActivity" />
        <activity
            android:name=".Activity.Splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Home.MainActivity"
            android:exported="true" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>