<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PdfReport.PdfDemoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
 <ImageView
        android:id="@+id/img_logo2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toBottomOf="@id/img_logo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/img_logo3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toBottomOf="@id/img_logo2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/img_logo4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toBottomOf="@id/img_logo3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
        android:id="@+id/img_logo5"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toBottomOf="@id/img_logo4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
        android:id="@+id/img_logo6"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splashlogo"
        app:layout_constraintTop_toBottomOf="@id/img_logo5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>