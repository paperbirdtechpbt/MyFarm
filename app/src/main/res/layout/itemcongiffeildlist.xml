<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label_fieldname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FieldName"
        android:textSize="12sp"
        android:alpha="0.7"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/field_name"
        app:layout_constraintStart_toStartOf="@id/field_name"/>

    <EditText
        android:id="@+id/field_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Edittext"
        android:padding="10dp"
     android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/design_edittext"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/label_field_expectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:alpha="0.7"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/field_expectedDate"
        app:layout_constraintStart_toStartOf="@id/field_expectedDate"/>

    <EditText
        android:id="@+id/field_expectedDate"
        style="@style/Edittext"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="50dp"
        android:paddingRight="25dp"
        android:focusable="false"
        android:drawableRight="@drawable/ic_calender"
        android:drawableTint="@color/green"
        android:drawablePadding="7dp"
        android:background="@drawable/design_edittext"
        app:layout_constraintTop_toBottomOf="@id/field_name" />
    <TextView
        android:id="@+id/label_field_spinner_Grip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FieldName"
        android:textSize="14sp"
        android:alpha="0.7"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/field_spinner_Grip"
        app:layout_constraintStart_toStartOf="@id/field_spinner_Grip"/>


    <EditText
        android:id="@+id/field_spinner_Grip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Edittext"
        app:layout_constraintTop_toBottomOf="@id/field_expectedDate"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_edittext" />
    <TextView
        android:id="@+id/label_field_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FieldName"
        android:textSize="14sp"
        android:alpha="0.7"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/field_spinner"
        app:layout_constraintStart_toStartOf="@id/field_spinner"/>
    <Spinner
        android:id="@+id/field_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Edittext"
        app:layout_constraintTop_toBottomOf="@id/field_spinner_Grip"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_edittext" />




</androidx.constraintlayout.widget.ConstraintLayout>