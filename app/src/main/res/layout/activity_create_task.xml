<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.pbt.myfarm.CreatetaskViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateTask.CreateTaskActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0px">
        <ImageView
            android:id="@+id/img_logo_createtask"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/splashlogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="18dp"/>
       <TextView
           android:id="@+id/lablel_createnewtask"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Create A New Task"
           android:textSize="19sp"
           android:textStyle="bold"
           android:textColor="@color/green"
           android:layout_marginTop="6dp"
           app:layout_constraintTop_toBottomOf="@id/img_logo_createtask"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"/>
<View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:background="@color/black"
    android:id="@+id/view_line"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/lablel_createnewtask"
     />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
app:layout_constraintBottom_toTopOf="@id/layout_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintLeft_toLeftOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

   <TextView
       android:id="@+id/label_namePrefix"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/Nameprefix"
       android:layout_marginLeft="25dp"
       android:textColor="@color/black"
       android:textSize="16sp"
     app:layout_constraintBottom_toTopOf="@id/ed_prefix"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/ed_prefix"
            style="@style/Edittext"
            android:backgroundTint="#EDEDED"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@={viewModel.namePrefix}"
app:layout_constraintTop_toTopOf="parent"
            android:editable="false"
            android:layout_marginLeft="25dp"
            android:background="@drawable/design_edittext"
            app:layout_constraintBottom_toTopOf="@id/ed_desciption" />

<TextView
       android:id="@+id/label_Description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/labelDescription"
       android:layout_marginLeft="25dp"
       android:textColor="@color/black"
       android:textSize="16sp"
app:layout_constraintBottom_toTopOf="@id/ed_desciption"
    app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/ed_desciption"
            style="@style/Edittext"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@={viewModel.desciption}"
app:layout_constraintBottom_toTopOf="@id/ed_configtype"
            android:layout_marginLeft="25dp"
            android:background="@drawable/design_edittext"
            app:layout_constraintTop_toBottomOf="@id/ed_prefix" />
        <TextView
            android:id="@+id/label_expectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_expectedStartDate"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/ed_expectedDate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/ed_expectedDate"
            style="@style/Edittext"
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_marginTop="35dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:text="@={viewModel.expectedStartDate}"
            android:drawableRight="@drawable/ic_calender"
            android:focusableInTouchMode="false"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/ed_expectedEndDate"
            android:layout_marginLeft="25dp"
            android:background="@drawable/design_edittext"
            app:layout_constraintTop_toBottomOf="@id/spinner_Grip" />

<TextView
       android:id="@+id/label_config_type"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/labelconfigtype"
       android:layout_marginLeft="25dp"
       android:textColor="@color/black"
       android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@id/ed_configtype"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="25dp"/>

     <EditText
         android:id="@+id/ed_configtype"
         android:editable="false"
         android:layout_marginTop="35dp"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         style="@style/Edittext"
         android:text="@={viewModel.confiType}"
         android:backgroundTint="#EDEDED"
app:layout_constraintBottom_toTopOf="@id/spinner_Grip"
         android:background="@drawable/design_edittext"
         app:layout_constraintTop_toBottomOf="@id/ed_desciption"/>
        <TextView
       android:id="@+id/label_community_Grip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/labelCommunitygrip"
       android:layout_marginLeft="25dp"
       android:textColor="@color/black"
       android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@id/spinner_Grip"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="25dp"/>

     <Spinner
         android:id="@+id/spinner_Grip"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         style="@style/Edittext"

app:layout_constraintBottom_toTopOf="@id/ed_expectedDate"
         android:layout_marginTop="35dp"
         android:background="@drawable/design_edittext"
         app:layout_constraintTop_toBottomOf="@id/ed_configtype"/>
                <TextView
                    android:id="@+id/label_expectedEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_expectedEndDate"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/ed_expectedEndDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="25dp"/>
                <EditText
                    android:id="@+id/ed_expectedEndDate"
                    style="@style/Edittext"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:text="@={viewModel.expectedEndDate}"
                    android:drawableRight="@drawable/ic_calender"
                    android:focusableInTouchMode="false"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintBottom_toTopOf="@id/ed_startDate"
                    android:background="@drawable/design_edittext"
                    app:layout_constraintTop_toBottomOf="@id/ed_expectedDate" />
                <TextView
                    android:id="@+id/label_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_startDate"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/ed_startDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="25dp"/>
                <EditText
                    android:id="@+id/ed_startDate"
                    style="@style/Edittext"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:layout_marginTop="35dp"
                    android:focusable="false"
                    android:text="@={viewModel.startDate}"
                    android:drawableRight="@drawable/ic_calender"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toTopOf="@id/ed_startDate"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/design_edittext"
                    app:layout_constraintTop_toBottomOf="@id/ed_expectedEndDate" />

                <TextView
                    android:id="@+id/label_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_EndDate"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/ed_endDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="25dp"/>
                <EditText
                    android:id="@+id/ed_endDate"
                    style="@style/Edittext"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
android:layout_marginTop="35dp"
                    android:text="@={viewModel.endDate}"
                    android:drawableRight="@drawable/ic_calender"
                    android:focusableInTouchMode="false"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/design_edittext"
                    app:layout_constraintTop_toBottomOf="@id/ed_startDate" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/layout_buttons"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/btn_create_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:onClick="@{(v)->viewModel.login(v)}"
        android:text="Create Task"
    app:layout_constraintBottom_toBottomOf="parent" />
    <Button
        android:id="@+id/btn_update_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"

        android:text="Update Task"
    app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>