<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.pbt.myfarm.ListNotificationData" />
    </data>
    <!--    android:background="#CBF0F3EF"-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2DD4E3FA"
        android:minHeight="60dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#C3BFBF">

        </View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#ffffff"
            android:id="@+id/img_box">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_box"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/img_box"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:minHeight="60dp"
            app:layout_constraintTop_toTopOf="parent">




            <ImageView
                android:id="@+id/img_notify"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_notificationbell"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_notification_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@{model.message}"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="@id/img_notify"
                app:layout_constraintBottom_toTopOf="@id/label_notification_time"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_notification_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:alpha="0.7"
                app:layout_constraintRight_toLeftOf="@id/img_notify"
                app:layout_constraintStart_toStartOf="@id/label_notification_msg"
                android:text="@{model.formatted_dob}"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_notification_msg" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>