<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.ViewTask.ViewTask">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/task_headcoloum"
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_height="wrap_content"

    android:background="#F5F5F5">
    <TextView
        android:id="@+id/label_mytask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:text="My Task"
        android:padding="10dp"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_create_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Create"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<TextView
    android:id="@+id/label_show"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/task_headcoloum"
    android:text=""
    android:textSize="15sp"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"/>
<ImageView
    android:id="@+id/img_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_search"
    app:layout_constraintTop_toTopOf="@id/ed_search"
    app:layout_constraintBottom_toBottomOf="@id/ed_search"
    app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
      app:layout_constraintLeft_toRightOf="@id/img_search"
        android:paddingLeft="50dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_headcoloum"
  />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_blueHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f1f5f9"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/label_show"
        >
        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Name"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/label_details"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/label_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Action"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toRightOf="@id/label_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recyclerview_viewtask"
    tools:listitem="@layout/itemlist_viewtask"

    app:layout_constraintTop_toBottomOf="@id/view_blueHeader"
    android:layout_marginTop="10dp" />





</androidx.constraintlayout.widget.ConstraintLayout>